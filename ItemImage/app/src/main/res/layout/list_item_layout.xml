<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.righteous_05.itemimage.ItemFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/rect_background"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/product_details_left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rect_background"
                    android:gravity="center_vertical"
                    android:minHeight="50dp"
                    android:paddingLeft="7dp" />

                <ImageButton
                    android:id="@+id/item_for_img_left"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@null"
                    android:maxHeight="250dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/demo_image_left" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/rect_background"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/price_left"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="center_vertical"
                        android:paddingLeft="7dp" />

                    <TextView
                        android:id="@+id/discount_left"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="center_vertical"
                        android:paddingLeft="7dp" />

                    <ImageButton
                        android:id="@+id/popUpMenuLeft"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:background="@null"
                        android:onClick="showPopup"
                        android:src="@drawable/menu" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/rect_background"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/product_details_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rect_background"
                    android:gravity="center_vertical"
                    android:minHeight="50dp"
                    android:paddingLeft="7dp" />

                <ImageButton
                    android:id="@+id/item_for_img_right"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@null"
                    android:maxHeight="250dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/demo_image_left" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/rect_background"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/price_right"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="center_vertical"
                        android:paddingLeft="7dp" />

                    <TextView
                        android:id="@+id/discount_right"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="center_vertical"
                        android:paddingLeft="7dp" />

                    <ImageButton
                        android:id="@+id/popUpMenuRight"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:background="@null"
                        android:onClick="showPopup"
                        android:src="@drawable/menu" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</FrameLayout>
